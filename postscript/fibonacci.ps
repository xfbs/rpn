% computes the nth fibonacci number f(n) recursively, where
% f(0) = f(1) = 1 and f(n) = f(n-1) + f(n-2).
/fibonacci {
    % check if these are the first two.
    dup 2 lt

    {   % if so, return 1.
        pop
        1
    } { % otherwise compute sum of
        % fibonacci(n-1) and fibonacci(n - 2)
        dup 2 sub
        fibonacci
        exch 1 sub
        fibonacci
        add
    } ifelse
} def

% print the first 25 fibonacci numbers
0 1 25 {
    % print n
    dup =string cvs print
    ( ) print

    % print fibonacci
    fibonacci =string cvs print
    (\n) print
} for
